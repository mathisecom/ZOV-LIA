{%- liquid 
  assign width = section.settings.width
  assign content_width = section.settings.content_width

  assign lazy = section.settings.lazy

  assign content_align = section.settings.content_align
  assign content_align_mobile = section.settings.content_align_mobile  

  assign content_horizontal_align = ""
  if content_align == "center"
    assign content_horizontal_align = "center"
  elsif content_align == "right"
    assign content_horizontal_align = "end"
  else
    assign content_horizontal_align = "start"
  endif

  assign content_horizontal_align_mobile = ""
  if content_align_mobile == "center"
    assign content_horizontal_align_mobile = "center"
  elsif content_align_mobile == "right"
    assign content_horizontal_align_mobile = "end"
  else
    assign content_horizontal_align_mobile = "start"
  endif

  assign custom_block = false

  for block in section.blocks
    if block.type != 'feature_row'
      assign custom_block = true
    endif
  endfor

   assign loading_attribute = 'eager'
  if lazy
    assign loading_attribute = 'lazy'
  endif
-%}

{%- style -%}
  .section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --section-padding-sides: {{ section.settings.padding_sides }}px;
    --gradient-start: {{ section.settings.gradient_start }};
    --gradient-end: {{ section.settings.gradient_end }};
    --primary-column-bg: {{ section.settings.primary_column_color }};
    --primary-column-gradient-start: {{ section.settings.primary_column_gradient_start }};
    --primary-column-gradient-end: {{ section.settings.primary_column_gradient_end }};
    --primary-column-text: {{ section.settings.primary_column_text_color }};
    --feature-text-color: {{ section.settings.feature_text_color }};
    --competitor-text-color: {{ section.settings.competitor_text_color }};
    --divider-color: {{ section.settings.divider_color }};
    --check-color: {{ section.settings.check_color }};
    --cross-color: {{ section.settings.cross_color }};
    --column-width: {{ section.settings.column_width }}px;
    --column-radius: {{ section.settings.column_radius }}px;
    --icon-size: {{ section.settings.icon_size }}px;
    --row-padding: {{ section.settings.row_padding }}px;
    --divider-thickness: {{ section.settings.divider_thickness }}px;
    --image-width: {{ section.settings.image_width }}px;
  }

  .section-{{ section.id }} .product-comparison {
    background: linear-gradient(180deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
    padding-top: var(--section-padding-top);
    padding-bottom: var(--section-padding-bottom);
  }

  .section-{{ section.id }} .product-comparison__container {
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--section-padding-sides);
  }

  .section-{{ section.id }} .product-comparison__mobile-button {
    display: none;
  }

  .section-{{ section.id }} .product-comparison__content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: {{ section.settings.content_gap }}px;
    align-items: center;
  }

  .section-{{ section.id }} .product-comparison__header {
    display: flex;
    flex-direction: column;
    align-items: {{ content_horizontal_align_mobile }};
  }

  @media(max-width: 1024px) {
    .comparison-button-desktop-{{ section.id }} {
      display: none !important;
    }
  }

  @media(min-width: 1024px) {
    .section-{{ section.id }} .product-comparison__header {
      align-items: {{ content_horizontal_align }} !important;
    }
  }

  {%- if section.settings.layout_direction == 'table_first' -%}
    @media(min-width: 1024px) {
      .section-{{ section.id }} .product-comparison__content {
        grid-template-columns: auto 1fr;
      }

      .section-{{ section.id }} .product-comparison__header {
        order: 2;
      }

      .section-{{ section.id }} .product-comparison__table {
        order: 1;
      }
    }

    .section-{{ section.id }} .product-comparison__header {
      {%- if section.settings.layout_direction == 'table_first' -%}
      padding-left: 2rem;
      {%- else -%}
      padding-right: 2rem;
      {%- endif -%}
    }
  {% elsif section.settings.layout_direction == 'table_first_vertical' %}
    @media(min-width: 1024px) {
      .section-{{ section.id }} .product-comparison__content {
        grid-template-columns: 1fr;
      }

      .section-{{ section.id }} .product-comparison__header {
        order: 2;
      }

      .section-{{ section.id }} .product-comparison__table {
        order: 1;
      }
    }
  {% elsif section.settings.layout_direction == 'heading_first_vertical' %} 
    .section-{{ section.id }} .product-comparison__mobile-button {
      justify-content: {{ content_horizontal_align_mobile  }};
    }

    @media(min-width: 1024px) {
      .section-{{ section.id }} .product-comparison__content {
        grid-template-columns: 1fr;
      }

      .section-{{ section.id }} .product-comparison__header {
        order: 1;
      }

      .section-{{ section.id }} .product-comparison__table {
        order: 2;
      }

      .comparison-button-desktop-{{ section.id }} {
        display: none !important;
      }

      .section-{{ section.id }} .product-comparison__mobile-button {
        display: flex !important;
        order: 3;
        justify-content: {{ content_horizontal_align }};
      }
    }
  {%- endif -%}
  



  .section-{{ section.id }} .product-comparison__heading {
    font-weight: 700;
    line-height: 1.15;
    margin: 0 0 1rem;
    text-align: {{ content_align_mobile }};
    /* Color is now applied inline via block settings */
  }

  .section-{{ section.id }} .product-comparison__heading--gradient {
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: {{ content_align_mobile }};
  }

  .section-{{ section.id }} .product-comparison__subheading {
    font-size: 1.125rem;
    color: var(--feature-text-color);
    opacity: 0.8;
    margin: 0;  
    text-align: {{ content_align_mobile }};
  }

  .section-{{ section.id }} .product-comparison__subtitle {
    text-align: {{ content_align_mobile }};
    /* Base font size set here, overridden inline */
    opacity: 0.85;
    margin: 0 0 0.5rem;
    line-height: 1.5;
    /* Color is now applied inline via block settings */
  }

  @media(min-width: 1024px) {
    .section-{{ section.id }} .product-comparison__subheading {
      text-align: {{ content_align }};
    }

    .section-{{ section.id }} .product-comparison__subtitle {
      text-align: {{ content_align }};
    }

    .section-{{ section.id }} .product-comparison__heading {
      text-align: {{ content_align }};
      /* Color is now applied inline via block settings */
    }

    .section-{{ section.id }} .product-comparison__heading--gradient {
      text-align: {{ content_align }};
    }
  }

  .section-{{ section.id }} .product-comparison__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid transparent;
    margin-top: 1.5rem;
    
    /* Variables applied via inline styles in HTML */
    background-color: var(--btn-bg);
    color: var(--btn-text);
    border-color: var(--btn-border);
  }

  .section-{{ section.id }} .product-comparison__button:hover {
    background-color: var(--btn-hover-bg);
    color: var(--btn-hover-text);
    border-color: var(--btn-hover-border);
    /* Animation variables controlled by Checkbox */
    opacity: var(--btn-hover-opacity);
    transform: var(--btn-hover-transform);
  }

  /* Keep structural styling for Link style (underline) if selected */
  .section-{{ section.id }} .product-comparison__button--link {
    padding: 0.5rem 0 !important;
    text-decoration: underline;
    text-underline-offset: 4px;
    border: none !important;
  }

  /* Table Structure */
  .section-{{ section.id }} .product-comparison__table {
    display: flex;
    flex-direction: column;
  }

  .section-{{ section.id }} .product-comparison__table-header {
    display: grid;
    grid-template-columns: minmax(180px, 1fr) var(--column-width) var(--column-width);
    gap: 0;
  }

  .section-{{ section.id }} .product-comparison__rows {
    display: flex;
    flex-direction: column;
  }

  .section-{{ section.id }} .product-comparison__row {
    display: grid;
    grid-template-columns: minmax(180px, 1fr) var(--column-width) var(--column-width);
    gap: 0;
  }

  /* Divider lines - only between rows, not on first or last */
  {%- if section.settings.show_dividers -%}
  .section-{{ section.id }} .product-comparison__row .product-comparison__feature-label,
  .section-{{ section.id }} .product-comparison__row .product-comparison__column--competitor {
    border-top: var(--divider-thickness) solid var(--divider-color);
  }
  {%- endif -%}

  /* Columns */
  .section-{{ section.id }} .product-comparison__column {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--row-padding) 1.25rem;
    min-height: 52px;
  }

  .section-{{ section.id }} .product-comparison__column--primary {
    {% if section.settings.primary_column_use_gradient %}
      background: linear-gradient(90deg, var(--primary-column-gradient-start) 0%, var(--primary-column-gradient-end) 100%);
    {% else %}
      background-color: var(--primary-column-bg);
    {% endif %}
    color: var(--primary-column-text);
  }

  .section-{{ section.id }} .product-comparison__table-header .product-comparison__column--primary {
    border-radius: var(--column-radius) var(--column-radius) 0 0;
    padding: 1.5rem 1.25rem 1.25rem;
  }

  .section-{{ section.id }} .product-comparison__row:last-child .product-comparison__column--primary {
    border-radius: 0 0 var(--column-radius) var(--column-radius);
    padding-bottom: 1.5rem;
  }

  .section-{{ section.id }} .product-comparison__column--competitor {
    background-color: transparent;
  }

  /* Feature Label */
  .section-{{ section.id }} .product-comparison__feature-label {
    display: flex;
    align-items: center;
    padding: var(--row-padding) 1rem var(--row-padding) 0;
    font-weight: {{ section.settings.feature_font_weight }};
    color: var(--feature-text-color);
    font-size: {{ section.settings.feature_font_size }}px;
  }

  .section-{{ section.id }} .product-comparison__table-header .product-comparison__feature-label {
    padding: 0;
  }

  /* Product Header */
  .section-{{ section.id }} .product-comparison__product {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.375rem;
  }

  .section-{{ section.id }} .product-comparison__product-image {
    width: var(--image-width);
    height: auto;
    margin-bottom: 0.5rem;
  }

  .section-{{ section.id }} .product-comparison__image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .section-{{ section.id }} .product-comparison__product-title {
    font-size: {{ section.settings.product_title_size }}px;
    font-weight: 600;
    margin: 0;
    color: inherit;
  }

  .section-{{ section.id }} .product-comparison__product-title--competitor {
    color: var(--competitor-text-color);
  }

  /* Badges */
  .section-{{ section.id }} .product-comparison__badge {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.2rem 0.5rem;
    border-radius: 2rem;
    font-size: 0.65rem;
    font-weight: 500;
  }

  .section-{{ section.id }} .product-comparison__badge--positive {
    background-color: {{ section.settings.badge_background }};
    color: var(--primary-column-text);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .section-{{ section.id }} .product-comparison__badge--positive svg {
    width: 14px;
    height: 14px;
  }

  .section-{{ section.id }} .product-comparison__badge--negative {
    color: var(--competitor-text-color);
    opacity: 0.6;
    font-size: 0.75rem;
    font-weight: 400;
  }

  /* Icons */
  .section-{{ section.id }} .product-comparison__icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-{{ section.id }} .product-comparison__icon svg {
    width: var(--icon-size);
    height: var(--icon-size);
  }

  .section-{{ section.id }} .product-comparison__icon--check svg {
    color: var(--check-color);
  }

  .section-{{ section.id }} .product-comparison__icon--cross svg {
    color: var(--cross-color);
  }

  /* Text Values */
  .section-{{ section.id }} .product-comparison__text-value {
    font-weight: 500;
    font-size: 0.875rem;
    text-align: center;
  }

  .section-{{ section.id }} .product-comparison__text-value--competitor {
    color: var(--competitor-text-color);
  }

  /* Responsive */
  @media screen and (max-width: 990px) {
    .section-{{ section.id }} {
      --section-padding-top: {{ section.settings.mobile_padding_top }}px;
      --section-padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      --section-padding-sides: {{ section.settings.mobile_padding_sides }}px;
    }

    .section-{{ section.id }} .product-comparison__content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-{{ section.id }} .product-comparison__header {
      padding: 0;
      text-align: center;
    }

    .section-{{ section.id }} .product-comparison__header .product-comparison__button {
      display: none;
    }

    .section-{{ section.id }} .product-comparison__mobile-button {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
      padding: 0 var(--section-padding-sides);
    }

    .section-{{ section.id }} .product-comparison__table {
      width: 100%;
    }

    .section-{{ section.id }} .product-comparison__table-header,
    .section-{{ section.id }} .product-comparison__row {
      grid-template-columns: 1fr minmax(90px, 1fr) minmax(90px, 1fr);
    }

    .section-{{ section.id }} .product-comparison__feature-label {
      padding-left: var(--section-padding-sides);
    }
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }} {
      --icon-size: 20px;
      --image-width: 60px;
      --row-padding: 12px;
    }

    .section-{{ section.id }} .product-comparison__column {
      padding: var(--row-padding) 0.5rem;
      min-height: 48px;
    }

    .section-{{ section.id }} .product-comparison__feature-label {
      font-size: 0.875rem;
      padding: var(--row-padding) 0.5rem var(--row-padding) var(--section-padding-sides);
    }

    .section-{{ section.id }} .product-comparison__product-title {
      font-size: 1rem;
    }

    .section-{{ section.id }} .product-comparison__text-value {
      font-size: 0.8125rem;
    }
  }

  @media screen and (max-width: 480px) {
    .section-{{ section.id }} {
      --image-width: 50px;
      --icon-size: 18px;
    }

    .section-{{ section.id }} .product-comparison__feature-label {
      font-size: 0.8125rem;
    }

    .section-{{ section.id }} .product-comparison__product-title {
      font-size: 0.9375rem;
    }

    .section-{{ section.id }} .product-comparison__badge {
      font-size: 0.6rem;
      padding: 0.125rem 0.4rem;
    }
  }
{%- endstyle -%}

{% if width == 'custom' %}
  <style>
    .section-{{ section.id }} .product-comparison__container {
      max-width: {{ content_width }}px !important;
    }
  </style>
{% elsif width == 'page' %}
  <style>
    .section-{{ section.id }} .product-comparison__container {      
      max-width: clamp(100px, var(--page-content-width, var(--page-width)), 100%) !important;
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  {% if block.type == 'button' %}
      <style>
        {{  block.settings.button_font | font_face: font_display: 'swap' }}
        
        .comparison-button-{{ block.id }} {
          position: relative;
          text-decoration: none;
          margin-top: {{ block.settings.button_mt_mobile }}px !important;
          {% if block.settings.button_full_width_mobile %}
            width: 100%;
          {% else %}
            width: fit-content;
          {% endif %}
        }
        
        .comparison-button-inner-{{ block.id }} {
          display: flex;
          align-items: center;
          justify-content: center;
          {% if block.settings.button_full_width_mobile %}
            max-width: 100%;
          {% else %}
            max-width: fit-content;
          {% endif %}
          gap: 10px;
          width: 100%;
          margin: 0;          
          font-size: {{ block.settings.button_size_mobile }}px;
          color: {{ block.settings.button_color }};
          line-height: {{ block.settings.button_height }}%;
          text-align: center;
          text-transform: unset;
          text-decoration: none;
          padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
          border-radius: {{ block.settings.button_radius }}px;
          transition: all 0.25s ease 0s;
          background-color: transparent;
          border: 0px;
          cursor: pointer;
          {% if block.settings.button_custom_styling and block.settings.button_style != "link" %}
            position: relative;
            overflow: hidden;
          {% endif %}
        }

        {% if block.settings.button_custom_styling and block.settings.button_style != "link" %}
          .comparison-button-inner-{{ block.id }} {
            background: linear-gradient(145deg, {{ block.settings.button_bg_color }}, {{ block.settings.button_bg_color | color_darken: 7.5 }});
            box-shadow: 0 8px 16px {{ block.settings.button_shadow_color }}4d, 0 4px 8px {{ block.settings.button_shadow_color }}33, inset 0 1px 0 #ffffff1a, inset 0 -1px 0 {{ block.settings.button_shadow_color }}4d;
            backdrop-filter: saturate(1.05);
            transition: all 0.25s ease 0s;
          }

          .comparison-button-inner-{{ block.id }}::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.6s ease;
          }

          .comparison-button-inner-{{ block.id }}:hover::before {
            left: 100%;
          }

          .comparison-button-inner-{{ block.id }}:hover {
            color: {{ block.settings.button_hover_color }};
            background: linear-gradient(145deg, {{ block.settings.button_bg_hover_color }}, {{ block.settings.button_bg_hover_color | color_darken: 7.5 }});
            transform: translateY(-2px);
            transition: all 0.25s ease 0s;
            box-shadow: 0 12px 24px {{ block.settings.button_shadow_color }}66, 0 6px 12px {{ block.settings.button_shadow_color }}4d, inset 0 1px 0 #ffffff26, inset 0 -1px 0 {{ block.settings.button_shadow_color }}66;
          }

          .comparison-button-inner-{{ block.id }}:active {
            transform: translateY(1px);
            filter: brightness(1.00208);
            box-shadow: 0 4px 8px {{ block.settings.button_shadow_color }}4d, 0 2px 4px {{ block.settings.button_shadow_color }}33, inset 0 1px 0 #ffffff0d, inset 0 -1px 0 {{ block.settings.button_shadow_color }}33;
          }
        {% else %}
          .comparison-button-inner-{{ block.id }}:hover {
            color: {{ block.settings.button_hover_color }};
            transition: all 0.25s ease 0s;
          }
        {% endif %}

        .comparison-button-inner-{{ block.id }} svg {
          width: 14px !important;
          height: 14px !important;
          background: transparent;
          min-height: auto !important;
        }

        .comparison-button-inner-{{ block.id }} svg path {
          fill: {{ block.settings.button_color }};
          transition: all 0.25s ease 0s;
        }

        .comparison-button-inner-{{ block.id }}:hover svg path {
          fill: {{ block.settings.button_hover_color }};
          transition: all 0.25s ease 0s;
        }

        @media(min-width: 1024px) {        
          .comparison-button-{{ block.id }} {
            margin-top: {{ block.settings.button_mt }}px !important;
            width: fit-content;
          }

          .comparison-button-inner-{{ block.id }} {
            display: flex !important;
            max-width: fit-content;            
            padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
            font-size: {{ block.settings.button_size }}px;
          }
        }
      </style>

       {% if block.settings.button_custom %}
        <style>
          .comparison-button-inner-{{ block.id }} {
            font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
            font-weight: {{ block.settings.button_font.weight }};
            font-style: {{ block.settings.button_font.style }};
          }
        </style>
      {% endif %} 
  
      {% if block.settings.button_style == "non_outline" or block.settings.button_style == "non_outline_arrow" %}
        <style>
          .comparison-button-inner-{{ block.id }} {
            background-color: {{ block.settings.button_bg_color }};
          }
  
          .comparison-button-inner-{{ block.id }}:hover {
            background-color: {{ block.settings.button_bg_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "outline" or block.settings.button_style == "outline_arrow" %}
        <style>
          .comparison-button-inner-{{ block.id }} {
            background-color: {{ block.settings.button_bg_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
          }
  
          .comparison-button-inner-{{ block.id }}:hover {
            background-color: {{ block.settings.button_bg_hover_color }};
            border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
          }
        </style>
      {% elsif block.settings.button_style == "link" %}
        <style>
          .comparison-button-inner-{{ block.id }} {
            padding: 0px !important;
          }
        </style>
      {% endif %}  
  {% endif %}
{% endfor %}

<div class="section-{{ section.id }}">
  <div class="product-comparison">
    <div class="product-comparison__container">
      <div class="product-comparison__content">
        {%- if custom_block -%}
          <div class="product-comparison__header">
            {%- for block in section.blocks -%}
              {%- if block.type == 'heading' -%}
                {%- liquid
                  assign heading_classes = 'product-comparison__heading'
                  if block.settings.use_gradient
                    assign heading_classes = heading_classes | append: ' product-comparison__heading--gradient'
                  endif
                -%}
                <style>
                  @media screen and (max-width: 990px) {
                    .section-{{ section.id }} .product-comparison__heading[data-block-id="{{ block.id }}"] {
                      font-size: {{ block.settings.mobile_font_size }}px !important;
                    }
                  }
                </style>
                <{{ block.settings.heading_tag }}
                  class="{{ heading_classes }}"
                  data-block-id="{{ block.id }}"
                  style="font-size: {{ block.settings.font_size }}px;{%- if block.settings.italic %} font-style: italic;{%- endif -%}{%- if block.settings.use_gradient %} background: linear-gradient(90deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;{%- else %} color: {{ block.settings.heading_color }};{%- endif -%}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.text -}}
                </{{ block.settings.heading_tag }}>
              {%- endif -%}
            {%- endfor -%}
