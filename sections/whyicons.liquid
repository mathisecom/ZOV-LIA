{% comment %}
  Section: Why Smileactives
  Description: Displays brand benefits with icons and descriptions
{% endcomment %}

{% style %}
  .why-smileactives {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    margin: 0;
  }

  .why-smileactives__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .why-smileactives__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .why-smileactives__title {
    font-size: 48px;
    font-weight: 600;
    color: {{ section.settings.title_color }};
    margin: 0 0 20px 0;
    line-height: 1.2;
  }

  .why-smileactives__subtitle {
    font-size: 20px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 900px;
    margin: 0 auto;
  }

  .why-smileactives__features {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin: 0;
  }

  .why-smileactives__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .why-smileactives__icon {
    width: 80px;
    height: 80px;
    margin-bottom: 20px;
    object-fit: contain;
  }

  .why-smileactives__feature-text {
    font-size: 18px;
    color: {{ section.settings.feature_text_color }};
    line-height: 1.5;
    margin: 0;
  }

  /* Responsive Tablet */
  @media screen and (max-width: 1024px) {
    .why-smileactives {
      padding: {{ section.settings.padding_top | divided_by: 1.2 }}px 0 {{ section.settings.padding_bottom | divided_by: 1.2 }}px 0;
    }

    .why-smileactives__features {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px 30px;
    }

    .why-smileactives__title {
      font-size: 40px;
    }

    .why-smileactives__subtitle {
      font-size: 18px;
    }
  }

  /* Responsive Mobile */
  @media screen and (max-width: 768px) {
    .why-smileactives {
      padding: {{ section.settings.padding_top | divided_by: 1.5 }}px 0 {{ section.settings.padding_bottom | divided_by: 1.5 }}px 0;
    }

    .why-smileactives__container {
      padding: 0 15px;
    }

    .why-smileactives__header {
      margin-bottom: 40px;
    }

    .why-smileactives__title {
      font-size: 32px;
      margin-bottom: 15px;
    }

    .why-smileactives__subtitle {
      font-size: 16px;
    }

    .why-smileactives__features {
      grid-template-columns: repeat(2, 1fr);
      gap: 35px 20px;
    }

    .why-smileactives__icon {
      width: 60px;
      height: 60px;
      margin-bottom: 15px;
    }

    .why-smileactives__feature-text {
      font-size: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .why-smileactives__title {
      font-size: 28px;
    }

    .why-smileactives__subtitle {
      font-size: 15px;
    }

    .why-smileactives__icon {
      width: 55px;
      height: 55px;
    }

    .why-smileactives__feature-text {
      font-size: 14px;
    }
  }
{% endstyle %}

<section class="why-smileactives">
  <div class="why-smileactives__container">
    <div class="why-smileactives__header">
      <h2 class="why-smileactives__title">{{ section.settings.title }}</h2>
      {% if section.settings.subtitle != blank %}
        <p class="why-smileactives__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="why-smileactives__features">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="why-smileactives__feature" {{ block.shopify_attributes }}>
            {% if block.settings.icon %}
              <img 
                src="{{ block.settings.icon | img_url: '200x' }}"
                alt="{{ block.settings.text | escape }}"
                class="why-smileactives__icon"
                loading="lazy"
              >
            {% else %}
              <div style="width: 80px; height: 80px; background: #E8E8E8; border-radius: 8px; margin-bottom: 20px;"></div>
            {% endif %}
            <p class="why-smileactives__feature-text">{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

