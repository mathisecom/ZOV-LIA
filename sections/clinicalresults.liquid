{% comment %}
  Section: Clinical Results
  Description: Displays clinical study results with image and statistics
{% endcomment %}

<style>
  .clinical-results {
    max-width: 1400px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  .clinical-results__container {
    display: flex;
    align-items: center;
    gap: 80px;
  }

  .clinical-results__image-wrapper {
    flex: 1;
    max-width: 600px;
  }

  .clinical-results__image {
    width: 100%;
    height: auto;
    border-radius: 20px;
    object-fit: cover;
  }

  .clinical-results__content {
    flex: 1;
    max-width: 600px;
  }

  .clinical-results__title {
    font-size: 56px;
    font-weight: 700;
    color: {{ section.settings.title_color }};
    margin: 0 0 30px 0;
    line-height: 1.2;
    letter-spacing: -0.5px;
  }

  .clinical-results__subtitle {
    font-size: 18px;
    color: #666;
    margin: 0 0 40px 0;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .clinical-results__stats {
    display: flex;
    flex-direction: column;
    gap: 25px;
    margin-bottom: 40px;
  }

  .clinical-results__stat {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .clinical-results__percentage {
    font-size: 56px;
    font-weight: 700;
    color: {{ section.settings.percentage_color }};
    min-width: 180px;
    line-height: 1;
  }

  .clinical-results__description {
    font-size: 18px;
    color: #333;
    line-height: 1.5;
  }

  .clinical-results__cta {
    display: inline-block;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 20px 60px;
    border-radius: 50px;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .clinical-results__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px {{ section.settings.button_background | color_modify: 'alpha', 0.3 }};
    opacity: 0.9;
  }

  /* Responsive Mobile */
  @media screen and (max-width: 768px) {
    .clinical-results {
      padding: 40px 15px;
    }

    .clinical-results__container {
      flex-direction: column;
      gap: 40px;
    }

    .clinical-results__image-wrapper {
      max-width: 100%;
    }

    .clinical-results__content {
      max-width: 100%;
      text-align: left;
    }

    .clinical-results__title {
      font-size: 36px;
      margin-bottom: 20px;
    }

    .clinical-results__subtitle {
      font-size: 14px;
      margin-bottom: 30px;
    }

    .clinical-results__stats {
      gap: 20px;
      margin-bottom: 30px;
    }

    .clinical-results__stat {
      flex-direction: row;
      align-items: flex-start;
      gap: 15px;
    }

    .clinical-results__percentage {
      font-size: 42px;
      min-width: 120px;
    }

    .clinical-results__description {
      font-size: 16px;
      padding-top: 5px;
    }

    .clinical-results__cta {
      width: 100%;
      text-align: center;
      padding: 18px 40px;
      font-size: 16px;
    }
  }

  @media screen and (max-width: 480px) {
    .clinical-results__title {
      font-size: 32px;
    }

    .clinical-results__percentage {
      font-size: 36px;
      min-width: 100px;
    }

    .clinical-results__description {
      font-size: 15px;
    }
  }
</style>

<section class="clinical-results">
  <div class="clinical-results__container">
    <div class="clinical-results__image-wrapper">
      {% if section.settings.image %}
        <img 
          src="{{ section.settings.image | img_url: '800x' }}"
          srcset="{{ section.settings.image | img_url: '400x' }} 400w,
                  {{ section.settings.image | img_url: '600x' }} 600w,
                  {{ section.settings.image | img_url: '800x' }} 800w"
          sizes="(max-width: 768px) 100vw, 50vw"
          alt="{{ section.settings.image.alt | escape }}"
          class="clinical-results__image"
          loading="lazy"
        >
      {% else %}
        <div style="background: #f5f5f5; aspect-ratio: 4/5; border-radius: 20px;"></div>
      {% endif %}
    </div>

    <div class="clinical-results__content">
      <h2 class="clinical-results__title">{{ section.settings.title }}</h2>
      
      {% if section.settings.subtitle != blank %}
        <p class="clinical-results__subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}

      <div class="clinical-results__stats">
        {% for block in section.blocks %}
          {% if block.type == 'stat' %}
            <div class="clinical-results__stat" {{ block.shopify_attributes }}>
              <div class="clinical-results__percentage">{{ block.settings.percentage }}</div>
              <div class="clinical-results__description">{{ block.settings.description }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="clinical-results__cta">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Clinical Results",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Clinically Shown Results"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#5B4BA8"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "IN A CLINICAL STUDY* :"
    },
    {
      "type": "color",
      "id": "percentage_color",
      "label": "Percentage Color",
      "default": "#5B4BA8"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button Background Color",
      "default": "#FF6B6B"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "text",
          "id": "percentage",
          "label": "Percentage",
          "default": "100%"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "of subjects had clinically measured whiter teeth"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clinical Results",
      "blocks": [
        {
          "type": "stat",
          "settings": {
            "percentage": "100%",
            "description": "of subjects had clinically measured whiter teeth"
          }
        },
        {
          "type": "stat",
          "settings": {
            "percentage": "94%",
            "description": "of subjects reported their smile looks brighter"
          }
        },
        {
          "type": "stat",
          "settings": {
            "percentage": "100%",
            "description": "of subjects reported it was easy to use"
          }
        },
        {
          "type": "stat",
          "settings": {
            "percentage": "92%",
            "description": "of subjects reported their smile looks healthier"
          }
        }
      ]
    }
  ]
}
{% endschema %}